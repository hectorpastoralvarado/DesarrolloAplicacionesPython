<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000"
    tools:context=".MenuGaleriaActivity">

    <TextView
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Galeria Interactiva"
        android:textSize="30dp"
        android:textAlignment="center"
        android:gravity="center"
        android:id="@+id/textView" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@drawable/logo_python"
        />

    <Button
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:id="@+id/btn_galeria1"
        android:layout_height="wrap_content"
        android:text="UTNG"
        android:background="#81b2de"
        android:textColor="#fff"
        />
<LinearLayout
    android:layout_marginTop="170dp"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="30dp"
        android:background="#fff"
        android:layout_height="30dp"
        android:src="@drawable/pastor_apps_logo"
        android:layout_gravity="center"
        android:layout_marginLeft="220dp"
        />
    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="PastorApps"
        />


</LinearLayout>


</LinearLayout>